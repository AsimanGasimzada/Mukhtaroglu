@model SliderCreateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Slayd yarat
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">

                    <input asp-for="@Model.SliderLanguages[0].LanguageId" value="1" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca başlıq</label>
                        <input class="form-control sliderName" required asp-for="@Model.SliderLanguages[0].Title" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[0].Title" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca açıqlama</label>
                        <input class="form-control sliderDescription" asp-for="@Model.SliderLanguages[0].Description" a placeholder="Açıqlama daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[0].Description" class="text-danger"></span>
                    </div>

       

                    <div class="form-group">
                        <input class=" sameDataInput" id="checkbox" type="checkbox">
                        <label for="checkbox">Bütün dillərdə eyni olsun</label>
                    </div>
                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.SliderLanguages[1].LanguageId" value="2" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə başlıq</label>
                        <input class="form-control sliderName" required asp-for="@Model.SliderLanguages[1].Title" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[1].Title" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə açıqlama</label>
                        <input class="form-control sliderDescription" asp-for="@Model.SliderLanguages[1].Description" placeholder="Açıqlama daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[1].Description" class="text-danger"></span>
                    </div>

                 
                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.SliderLanguages[2].LanguageId" value="3" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca başlıq</label>
                        <input class="form-control sliderName" required asp-for="@Model.SliderLanguages[2].Title" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[2].Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca açıqlama</label>
                        <input class="form-control sliderDescription" asp-for="@Model.SliderLanguages[2].Description" placeholder="Açıqlama daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[2].Description" class="text-danger"></span>
                    </div>

                </div>

                <hr />
                <br />
                <br />


                <div class="form-group">
                    <label for="exampleInputUsername1"> Url daxil edin,əgər varsa</label>
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputUsername1"> Şəkil seçin</label>
                    <input class="form-control" accept="image/*" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>



                <button type="submit" class="btn btn-primary mr-2">Yarat</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>


<script>
            const sameDataInput=document.querySelector(".sameDataInput")
       const nameInputs=document.querySelectorAll(".sliderName");
       const descriptionInputs=document.querySelectorAll(".sliderDescription");

    sameDataInput.addEventListener("change",(e)=>{
        e.preventDefault();
        if(sameDataInput.checked){

            let name=nameInputs[0].value;
            let description=descriptionInputs[0].value;

            nameInputs.forEach(input=>input.value=name)
            descriptionInputs.forEach(input=>input.value=description)
        }
    })
</script>