@model SliderUpdateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Slaydı dəyiş
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">

                    <input asp-for="@Model.SliderLanguages[0].LanguageId" value="1" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca başlıq</label>
                        <input class="form-control" required asp-for="@Model.SliderLanguages[0].Title" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[0].Title" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca açıqlama</label>
                        <input class="form-control" asp-for="@Model.SliderLanguages[0].Description" placeholder="Açıqlama daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[0].Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca düymə kontenti</label>
                        <input class="form-control" required asp-for="@Model.SliderLanguages[0].ButtonTitle" placeholder="Düymə üçün kontent daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[0].ButtonTitle" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.SliderLanguages[1].LanguageId" value="2" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə başlıq</label>
                        <input class="form-control" required asp-for="@Model.SliderLanguages[1].Title" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[1].Title" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə açıqlama</label>
                        <input class="form-control" asp-for="@Model.SliderLanguages[1].Description" placeholder="Açıqlama daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[1].Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə düymə kontenti</label>
                        <input class="form-control" required asp-for="@Model.SliderLanguages[1].ButtonTitle" placeholder="Düymə üçün kontent daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[1].ButtonTitle" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.SliderLanguages[2].LanguageId" value="3" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca başlıq</label>
                        <input class="form-control" required asp-for="@Model.SliderLanguages[2].Title" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[2].Title" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca açıqlama</label>
                        <input class="form-control" asp-for="@Model.SliderLanguages[2].Description" placeholder="Açıqlama daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[2].Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca düymə kontenti</label>
                        <input class="form-control" required asp-for="@Model.SliderLanguages[2].ButtonTitle" placeholder="Düymə üçün kontent daxil edin">
                        <span asp-validation-for="@Model.SliderLanguages[2].ButtonTitle" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">
                    <label for="exampleInputUsername1"> Url daxil edin,əgər varsa</label>
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <img src="@Model.ImagePath" width="100" height="100" />
                    <input asp-for="ImagePath" type="hidden" />
                    <label for="exampleInputUsername1"> Şəkil seçin</label>
                    <input class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>




                <button type="submit" class="btn btn-primary mr-2">Dəyişdir</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>






