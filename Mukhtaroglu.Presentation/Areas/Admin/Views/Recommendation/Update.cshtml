@model RecommendationUpdateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Tövsiyyə dəyişdir
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">

                    <input asp-for="@Model.RecommendationLanguages[0].LanguageId" value="1" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca ad və soyad</label>
                        <input class="form-control recommendationAuthor" required asp-for="@Model.RecommendationLanguages[0].Author" placeholder="Ad soyad daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[0].Author" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca peşə</label>
                        <input class="form-control recommendationPosition" required asp-for="@Model.RecommendationLanguages[0].Profession" placeholder="Peşə daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[0].Profession" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca məzmun</label>
                        <input class="form-control recommendationTitle" required asp-for="@Model.RecommendationLanguages[0].Title" placeholder="Məzmun daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[0].Title" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input class=" sameDataInput" id="checkbox" type="checkbox">
                        <label for="checkbox">Bütün dillərdə eyni olsun</label>
                    </div>

                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.RecommendationLanguages[1].LanguageId" value="2" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə ad və soyad</label>
                        <input class="form-control recommendationAuthor" required asp-for="@Model.RecommendationLanguages[1].Author" placeholder="Ad soyad daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[1].Author" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə peşə</label>
                        <input class="form-control recommendationPosition" required asp-for="@Model.RecommendationLanguages[1].Profession" placeholder="Peşə daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[1].Profession" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə məzmun</label>
                        <input class="form-control recommendationTitle" required asp-for="@Model.RecommendationLanguages[1].Title" placeholder="Məzmun daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[1].Title" class="text-danger"></span>
                    </div>


                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.RecommendationLanguages[2].LanguageId" value="3" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca ad və soyad</label>
                        <input class="form-control recommendationAuthor" required asp-for="@Model.RecommendationLanguages[2].Author" placeholder="Ad soyad daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[2].Author" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca peşə</label>
                        <input class="form-control recommendationPosition" required asp-for="@Model.RecommendationLanguages[2].Profession" placeholder="Peşə daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[2].Profession" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca məzmun</label>
                        <input class="form-control recommendationTitle" required asp-for="@Model.RecommendationLanguages[2].Title" placeholder="Məzmun daxil edin">
                        <span asp-validation-for="@Model.RecommendationLanguages[2].Title" class="text-danger"></span>
                    </div>

                </div>

                <hr />
                <br />
                <br />


                <div class="form-group">
                    <label for="exampleInputUsername1"> Reytinq daxil edin</label>
                    <input class="form-control" asp-for="Rating">
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning mr-2">Dəyişdir</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>


<script>
        const sameDataInput=document.querySelector(".sameDataInput")
       const nameInputs=document.querySelectorAll(".recommendationAuthor");
       const positionInputs=document.querySelectorAll(".recommendationPosition");
       const titleInputs=document.querySelectorAll(".recommendationTitle");

    sameDataInput.addEventListener("change",(e)=>{
        e.preventDefault();
        if(sameDataInput.checked){

            let name=nameInputs[0].value;
            let position=positionInputs[0].value;
            let title=titleInputs[0].value;

            nameInputs.forEach(input=>input.value=name)
            positionInputs.forEach(input=>input.value=position)
            titleInputs.forEach(input=>input.value=title)


        }
    })
</script>
