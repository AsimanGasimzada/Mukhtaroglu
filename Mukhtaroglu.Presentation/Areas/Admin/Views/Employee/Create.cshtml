@model EmployeeCreateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                İşçi yarat
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">

                    <input asp-for="@Model.EmployeeLanguages[0].LanguageId" value="1" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca ad</label>
                        <input class="form-control employeeName" required asp-for="@Model.EmployeeLanguages[0].Fullname" placeholder="Ad daxil edin">
                        <span asp-validation-for="@Model.EmployeeLanguages[0].Fullname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca vəzifə</label>
                        <input class="form-control employeePosition" required asp-for="@Model.EmployeeLanguages[0].Position" placeholder="Vəzifə daxil edin">
                        <span asp-validation-for="@Model.EmployeeLanguages[0].Position" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Azərbaycanca açıqlama</label>
                        <textarea class="form-control rich-editor" id="description0" asp-for="@Model.EmployeeLanguages[0].Description" placeholder="Açıqlama daxil edin"></textarea>
                        <span asp-validation-for="@Model.EmployeeLanguages[0].Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class=" sameDataInput" id="checkbox" type="checkbox">
                        <label for="checkbox">Bütün dillərdə eyni olsun</label>
                    </div>

                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.EmployeeLanguages[1].LanguageId" value="2" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə ad</label>
                        <input class="form-control employeeName" required asp-for="@Model.EmployeeLanguages[1].Fullname" placeholder="Ad daxil edin">
                        <span asp-validation-for="@Model.EmployeeLanguages[1].Fullname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə vəzifə</label>
                        <input class="form-control employeePosition" required asp-for="@Model.EmployeeLanguages[1].Position" placeholder="Vəzifə daxil edin">
                        <span asp-validation-for="@Model.EmployeeLanguages[1].Position" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">İngiliscə açıqlama</label>
                        <textarea class="form-control rich-editor" id="description1" asp-for="@Model.EmployeeLanguages[1].Description" placeholder="Açıqlama daxil edin"></textarea>
                        <span asp-validation-for="@Model.EmployeeLanguages[1].Description" class="text-danger"></span>
                    </div>

                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.EmployeeLanguages[2].LanguageId" value="3" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca ad</label>
                        <input class="form-control employeeName" required asp-for="@Model.EmployeeLanguages[2].Fullname" placeholder="Ad daxil edin">
                        <span asp-validation-for="@Model.EmployeeLanguages[2].Fullname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca vəzifə</label>
                        <input class="form-control employeePosition" required asp-for="@Model.EmployeeLanguages[2].Position" placeholder="Vəzifə daxil edin">
                        <span asp-validation-for="@Model.EmployeeLanguages[2].Position" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Rusca açıqlama</label>
                        <textarea class="form-control rich-editor" id="description2" asp-for="@Model.EmployeeLanguages[2].Description" placeholder="Açıqlama daxil edin"></textarea>
                        <span asp-validation-for="@Model.EmployeeLanguages[2].Description" class="text-danger"></span>
                    </div>

                </div>

                <hr />
                <br />
                <br />


                <div class="form-group">
                    <label for="exampleInputUsername1"> Email Adresi:</label>
                    <input class="form-control" asp-for="EmailAddress" placeholder="Email adresi daxil edin">
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputUsername1"> Telefon nömrəsi əgər varsa:</label>
                    <input class="form-control" asp-for="PhoneNumber" placeholder="Telefon nömrəsi daxil edin">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputUsername1"> Şəkil seçin</label>
                    <input class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>




                <button type="submit" class="btn btn-primary mr-2">Yarat</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>





@section Scripts {

    <script >



           const sameDataInput=document.querySelector(".sameDataInput")
           const nameInputs=document.querySelectorAll(".employeeName");
           const positionInputs=document.querySelectorAll(".employeePosition");

        sameDataInput.addEventListener("change",(e)=>{
            e.preventDefault();
            if(sameDataInput.checked){

                let name=nameInputs[0].value;
                let position=positionInputs[0].value;

                nameInputs.forEach(input=>input.value=name)
                positionInputs.forEach(input=>input.value=position)
            }
        })
    </script>
}
